
<div class="container ">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :onsubmit => 'return validaciones();' } ) do |f| %>
      <%= devise_error_messages! %>
    <!--Template of demo dashboar-->
    <div class="col">
      <!-- Form with placeholder -->
      <div class="col s12 m12 l6  "  style="margin: 10% "  >
        <div class="card-panel z-depth-1 grey lighten-4 "  >
          <div class="row">
            <div class="col s2 offset-s5">
              <label class="file-field ">
                <img id="image" src="<%= asset_path 'profile3.jpg'%>" alt="" class="circle responsive-img border1"> <!-- notice the "circle" class -->
                <span>profile</span>
                <%= f.file_field :image , class:"active validate",onchange:"document.getElementById('image').src = window.URL.createObjectURL(this.files[0])"%>
              </label>
            </div>
          </div>
          <div class="row">
            <h4 class="center header2">Register Student</h4>
          </div>
          <div class="row">
            <form class="col s12">
              <div class="row">
                <div class="input-field  col s6  ">
                  <i class="material-icons prefix">person</i>
                  <%= f.text_field :name  %>
                  <%= f.label :name %>
                  <p id="paragraph_name" class="help"></p>
                </div>
                <div class="input-field  col s6 ">
                  <i class="material-icons prefix">supervisor_account</i>
                  <%= f.text_field :last_name , class:"active validate"%>
                  <%= f.label :last_name %>
                  <p id="paragraph_last_name" class="help"></p>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s6">
                  <i class="material-icons prefix">phone</i>
                  <%= f.text_field :phone, class:"active validate" %>
                  <%= f.label :phone %>
                  <p id="paragraph_phone" class="help"></p>
                </div>
                <div class="input-field col s6">
                  <i class="material-icons prefix">home</i>
                  <%= f.text_field :address,class:"active validate",  style: "margin-bottom: 0px" %>
                  <%= f.label :address %>
                  <p id="paragraph_address" class="help"></p>
                </div>
              </div>
              <div class="row">
                <div class="input-field  col s6 ">
                  <i class="material-icons prefix">account_circle</i>
                  <%= f.text_field :user_name ,class:"active validate", style: "margin-bottom: 0px"%>
                  <%= f.label :user_name %>
                  <p id="paragraph_user_name" class="help"></p>
                </div>
                <div class="input-field col s6">
                  <i class="material-icons prefix">email</i>
                  <%= f.email_field :email, class:"active validate",  style: "margin-bottom: 0px" %>
                  <%= f.label :email%>
                  <p id="paragraph_email" class="help"></p>
                </div>
              </div>
              <!-- input file cargar imagen
              <div class="row">
                <div class="input-field col s12">
                  <%= f.label :image %><br />
                  <%= f.file_field :image %><br />
                </div>
              </div>
              -->
              <div class="row">
                <div class="input-field col s6 quit-margen-botton">
                  <i class="material-icons prefix">lock_outline</i>
                  <%= f.password_field :password, autocomplete: "off" ,class:"active validate",  style: "margin-bottom: 0px"%>
                  <%= f.label :password ,placeholder:'Password (6 characters minimun)'%>
                  <p id="paragraph_password" class="help"></p>
                </div>
                <div class="input-field col s6">
                  <i class="material-icons prefix">lock</i>
                  <%= f.password_field :password_confirmation,autocomplete: "off",class:"active validate",  style: "margin-bottom: 0px" %>
                  <%= f.label :password_confirmation,placeholder:'Password_Confirmation' %>
                  <p id="paragraph_password_confirmation" class="help"></p>
                </div>
              </div>
                <div class="row ">
                  <br>
                  <div class="input-field  center-align">
                    <%= f.submit "Sign up", class:'btn  waves-light'%>
                  </div>
                </div>

            </form>
          </div>
        </div>
      </div>
    </div>
<% end %>
</div>
<%= render "students/shared/links" %>

