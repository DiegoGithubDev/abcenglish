 </script>

<div id="basic-form" class="section">
              <div class="row">
               <div class="col s12 m12 l6">
                  <ul class="bxslider">
                      <li> 
                        <div align="center"> <%= link_to image_tag('i1.jpg') %>   </div>  
                      </li>
                      <li> 
                        <div align="center"> <%= link_to image_tag('i2.jpg') %> </div>  
                      </li>
                      <li> 
                        <div align="center"> <%= link_to image_tag('i3.png') %> </div> 
                      </li>

                      <li> 
                        <div align="center"> <%= link_to image_tag('girls.png') %> </div> 
                      </li>
                      <li> 
                        <div align="center"> <%= image_tag('girls.png') %> </div> 
                      </li> 
                  </ul>
                </div>

                
<!-- Form with placeholder -->
                <div class="col s12 m12 l6">
                  <div class="card-panel">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <h4 class="header2">Form Login basura </h4>
                    <div class="row">
                      <form class="col s12">
                        <div class="row">
                          <div class="input-field col s12">
                             <%= f.text_field :user_name, :class => 'form-control' , placeholder: "user name" %>
                            <label for="first_name" class="active">User Name</label>

                          </div>
                        </div>
                      
                        <div class="row">
                          <div class="input-field col s12">
                             <%= f.password_field :password, autocomplete: "off" %>
                            <label for="password" class="active">Password</label>
                          </div>
                        </div>  
                        <div class="row">
                            <% if devise_mapping.rememberable? -%>
                              <div class="field">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                              </div>
                            <% end -%>
                        </div>

                          <div class="row">
                            <div class="input-field col s12">
                                <%= f.submit  "log in" ,:class => "btn cyan waves-effect waves-light right" %>
                                <i class="mdi-content-send right"></i>
                            </div>
                          </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>

<% end %>


